<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="bform py-5">
    <!-- Row -->
    <div class="row">
      <div class="container">
        <div class="col-lg-6 align-justify-center pr-4 pl-0 contact-form">
          <div class="">
            <form class="mt-3">
              <div class="row">
                <div class="col-lg-12">
                  <div class="form-group">
                    <div class="field">
                      <%= f.label :email %><br />
                      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                    </div>
                    <div class="field">
                      <%= f.label :password %>
                      <% if @minimum_password_length %>
                        <em>(<%= @minimum_password_length %> characters minimum)</em>
                      <% end %><br />
                      <%= f.password_field :password, autocomplete: "new-password" %>
                    </div>
                    <div class="field">
                      <%= f.label :password_confirmation %><br />
                      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                    </div>
                    <div class="field">
                      <%= f.label :role %><br />
                      <%= f.text_field :role %>
                    </div>
                  </div>
                </div>
                <div class="col-lg-12">
                  <div class="btn btn-md btn-block btn-danger-gradiant text-white border-0"><span>
                      <%= f.submit "Sign up" %>
                    </span></div>
                  <!-- -->
                </div>
              </div>
            </form>
            <div class="row">
              <div class="col-lg-12 text-center mt-4">
                <h6 class="font-weight-normal">Signup with Social Accounts</h6>
                <div class="row">
                  <div class="col-lg-6 col-md-6">
                  </div>
                  <div class="col-lg-6 col-md-6">
                    <a href="#" class="btn btn-block bg-twitter text-white mt-3">GitHub</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
<% end %>
<%= render "users/shared/links" %>
