<h1 class="mb-4">Orders</h1>
<% @orders.each do |order| %>
  <article class="card">
    <div class="card-body">
      <h4><%= order.title %></h4>
      <span> Status:</span>
      <%= order.aasm_state %>
      <section class="card-text">
        <span> Deadline:</span>
        <time datetime="<%= order.deadline %>">
          <small><%= order.deadline %></small>
        </time>
      </section>
      <%= link_to 'Show', order_path(order), class: "btn btn-outline-success my-2 my-sm-0" %>
    </div>
  </article>
<% end %>
