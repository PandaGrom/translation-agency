<h1 class="mb-4"><%= @order.title %> </h1>
<p class="lead my-3">
  <span>Created at: </span>
  <time datetime="<%= @order.formatted_created_at %>">
    <%= @order.formatted_created_at %>
  </time><br>
  <span>Deadline: </span>
  <time datetime="<%= @order.deadline %>">
    <%= @order.deadline %>
  </time><br>
  <span>Description: </span>
  <%= @order.description%><br>
  <span>Status: </span>
  <%= @order.aasm_state%><br>
  <span>Category: </span>
  <%= @order.category.title%><br>
  <%= link_to 'Download file', @order.file%>
  <%= link_to 'Delete', order_path(@order),  method: :delete, class: "btn btn-outline-danger my-2 my-sm-0" %>
  <div class='mb-3 row'>
    <%= form_with model: [@order, @comment] do |f| %>
      <span>Send comment: </span><br>
      <div class='mb-3 row'>
        <div class='col-sm-10'>
          <%= f.text_area :text, class: 'form-control my-2'%>
        </div>
      </div>
      <%= f.submit 'Send comment', class: 'btn btn-outline-success my-2 my-sm-0'%>
    </div>
  <% end %>
  <h2 class="mt-5">Comments: </h2>
  <% @comments.each do |comment|%>
      <time datetime="<%= comment.created_at %>">
        <%=comment.created_at%>
      </time>
      <p>
        <%= comment.text %>
      </p>
       <p>
        <%= comment.user.name %>
      </p>
      <%= link_to 'Delete', order_comment_path(@order, comment),  method: :delete, class: "btn btn-outline-danger my-2 my-sm-0" %>
  <% end %>
</p>
