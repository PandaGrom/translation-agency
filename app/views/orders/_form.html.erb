<%= form_with model: @order do |f| %>
  <div class='mb-3 row'>
    <%= f.label :title, class: 'col-sm-2 col-form-label'%>
    <div class='col-sm-10'>
      <%= f.text_field :title, required: true, minlength: 6, placeholder: 'Title', class: 'form-control' %>
    </div>
  </div>
  <div class='mb-3 row'>
    <%= f.label :description, class: 'col-sm-2 col-form label' %>
    <div class='col-sm-10'>
      <%= f.text_area :description, class: 'form-control my-2'%>
    </div>
    <%= f.label :category, class: 'col-sm-2 col-form label my-2' %>
    <div class='col-sm-10'>
      <%= f.collection_select :category_id, Category.order(:title).uniq { |item| item.title }, :id, :title, class: "form-control" %>
    </div>
    <%= f.label :deadline, class: 'col-sm-2 col-form label my-2' %>
    <div class='col-sm-10'>
      <%= f.datetime_field :deadline %>
    </div>
    <%= f.file_field :file, required: true %>
  </div>
  <%= f.submit 'Create order', class: 'btn btn-outline-success my-2 my-sm-0'%>
</div>
<% end %>
