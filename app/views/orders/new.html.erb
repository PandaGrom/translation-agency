<h1>New order</h1>
<%= form_with model: @order do |f| %>
  <div>
    <%= f.label :title%>
    <%= f.text_field :title, required: true, minlength: 6 %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description%>
  </div>
  <div>
    <%= f.label :category %>
    <%= f.text_area :category%>
  </div>
  <%= f.submit 'Create order'%>
<% end %>
